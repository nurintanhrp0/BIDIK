<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_detail"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basedColor"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:layout_marginRight="8dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/sp_filter">
                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">

                <EditText
                    android:hint="Cari..."
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCari">
                </EditText>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="20dp"
                    android:src="@drawable/search">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/blockPlat"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPlat"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Nomor Plat"></TextView>

            <TextView
                android:layout_below="@id/txtPlat"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTanggalMasuk"
                android:textSize="14dp"
                android:text="Tanggal Data Masuk"></TextView>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtPlat"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTanggalMasuk"
                android:textSize="14dp"
                android:text="20 Juni 2020"></TextView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/basedColor"
            android:layout_below="@id/blockPlat">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvmodelkendaraan"
                android:textSize="14dp"
                android:text="Model Kendaraan"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtModelKendaraan"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Model Kendaraan"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvnomorrangka"
                android:textSize="14dp"
                android:text="Nomor Rangka"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNomorRangka"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Nomor Rangka"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvnomormesin"
                android:textSize="14dp"
                android:text="Nomor Mesin"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNomorMesin"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Nomor Mesin"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvleasing"
                android:textSize="14dp"
                android:text="Leasing"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtLeasing"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Leasing"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvsisatagihan"
                android:textSize="14dp"
                android:text="Sisa Tagihan"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSisaTagihan"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Sisa Tagihan"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvoverdue"
                android:textSize="14dp"
                android:text="Over Due"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtOverDue"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Over Due"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvcatatan"
                android:textSize="14dp"
                android:text="Catatan Anda"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpCatatan"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:hint=""></EditText>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:text="Simpan Catatan"
                android:textColor="@android:color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:id="@+id/txtSimpan">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_red"
                android:text="Hapus Unit"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="45dp"
                android:id="@+id/txtHapus">
            </TextView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_below="@id/txtSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:text="Lock Unit"
                android:textColor="@android:color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:id="@+id/txtLock">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WA, Telegram, Email"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_centerHorizontal="true">
            </TextView>

            <ImageView
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/share"
                android:tint="@android:color/white">
            </ImageView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>