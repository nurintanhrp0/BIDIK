<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonfirmasiPembayaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingBottom="20dp"
            android:paddingHorizontal="20dp"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_kepala">
            </ImageView>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIDIK"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/logo"
                android:id="@+id/txtTitle">
            </TextView>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M A T E L  S U P E R  A P P"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/logo"
                android:layout_below="@id/txtTitle">
            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingHorizontal="10dp"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="end"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:id="@+id/btnClose">
            </ImageView>

            <TextView
                android:id="@+id/txtsubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:text="Untuk mengaktifkan keanggotan anda, silahkan lakukan pembayaran ke nomor rekening dibawah ini :"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_dark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHarga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:paddingHorizontal="15dp"
                    android:text="Rp 100.000"
                    android:textColor="@color/colorPrimaryDark"></TextView>

                <TextView
                    android:onClick="salinHarga"
                    android:id="@+id/txtSalinHarga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Salin"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"></TextView>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Nomor Rekening"
                android:layout_marginHorizontal="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_dark"
                >

                <TextView
                    android:paddingHorizontal="15dp"
                    android:id="@+id/norek"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <TextView
                    android:onClick="shareNorek"
                    android:id="@+id/txtSalinNorek"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text="Salin"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center_horizontal">
                </TextView>


            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/metodepembayaran"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:text="Metode Pembayaran"
                android:textColor="@android:color/black">
            </TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/atasNama"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:text="Atas Nama"
                android:textColor="@android:color/black">
            </TextView>

            <Button
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnKonnfirmasi"
                android:layout_marginBottom="35dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:paddingVertical="10dp"
                android:text="K O N F I R M A S I  P E M B A Y A R A N"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal">
            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>