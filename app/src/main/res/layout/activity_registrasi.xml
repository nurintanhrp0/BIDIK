<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrasi"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:paddingBottom="20dp"
        android:paddingHorizontal="20dp"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_kepala">
        </ImageView>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIDIK"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/logo"
            android:id="@+id/txtTitle">
        </TextView>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M A T E L  S U P E R  A P P"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/logo"
            android:layout_below="@id/txtTitle">
        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:paddingBottom="20dp"
        android:paddingHorizontal="10dp"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:id="@+id/btnClose">
        </ImageView>

        <EditText
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:id="@+id/inpNama"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dark"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:hint="Nama"
            android:textColor="@android:color/black">
        </EditText>

        <EditText
            android:inputType="number"
            android:id="@+id/inpNohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/border_dark"
            android:hint="Nomor Handphone"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@android:color/black"></EditText>

        <EditText
            android:inputType="numberPassword"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/inpPwd"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dark"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:hint="Password"
            android:textColor="@android:color/black">
        </EditText>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dark"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="10dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:id="@+id/sp_kategori">
            </Spinner>

        </LinearLayout>

        <Button
            android:layout_marginHorizontal="10dp"
            android:id="@+id/btnDaftar"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingVertical="15dp"
            android:text="M E N D A F T A R"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:gravity="center_horizontal">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seluruh data dan aplikasi ini bukan alat sah penarikan unit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="10dp">
        </TextView>


    </LinearLayout>

    </LinearLayout>

</ScrollView>