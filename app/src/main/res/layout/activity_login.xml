<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingBottom="20dp"
                android:paddingHorizontal="20dp"
                android:background="@color/colorPrimaryDark"
                android:paddingTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo_kepala">
                </ImageView>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIDIK"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"
                    android:layout_toRightOf="@+id/logo"
                    android:id="@+id/txtTitle">
                </TextView>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M A T E L  S U P E R  A P P"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_below="@id/txtTitle">
                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:paddingBottom="20dp"
                android:paddingHorizontal="10dp"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="end"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_close"
                    android:id="@+id/btnClose">
                </ImageView>

                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/inpNohp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_dark"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:hint="Nomor Handphone"
                    android:textColor="@android:color/black">
                </EditText>

                <EditText
                    android:inputType="numberPassword"
                    android:id="@+id/inpPwd"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_dark"
                    android:paddingVertical="10dp"
                    android:hint="Password"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="10dp">
                </EditText>

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/btnLogin"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:paddingVertical="15dp"
                    android:text="L O G I N"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:gravity="center_horizontal">
                </Button>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seluruh data dan aplikasi ini bukan alat sah penarikan unit"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp">
                </TextView>


            </LinearLayout>

        </LinearLayout>

</ScrollView>